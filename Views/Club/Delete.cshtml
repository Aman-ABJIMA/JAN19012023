@using WebApplicationMVC.Data.Enums;
@model Club
<h1>Are You sure, You want to delete club ?</h1>
<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" value=" AddressId" id="AddressId"/>
    <div class="from-group">
        <input asp-for="Title" class="from-control" placeholder="Title">
        <span asp-validation-for="Title" class="text-danger" />
    </div>

    <div class="from-group">
        <input asp-for="Description" class="from-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger" />
    </div>

    <div class="from-group">
        <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()" class="from-control">Select</select>

        <span asp-validation-for="ClubCategory" class="text-danger" />
    </div>

    <div class="from-group">
        <input asp-for="Address.Street" class="from-control" placeholder="Street">
        <span asp-validation-for="Address.Street" class="text-danger" />
    </div>

    <div class="from-group">
        <input asp-for="Address.State" class="from-control" placeholder="State">
        <span asp-validation-for="Address.State" class="text-danger" />
    </div>
    <div class="from-group">
        <input type="file" asp-for="Image" class="from-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger" />
    </div>
</form>

  <div class="from-group">
    <form action="DeleteClub" method="post">
        <input type="hidden" asp-for="Id">
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
  </div>
       

    

